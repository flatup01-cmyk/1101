rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // videos/{firebaseUid}/{jobId}/{filename} の3階層パス構造に対応
    match /videos/{firebaseUid}/{jobId}/{filename} {
      
      // アップロード許可条件
      // 匿名認証でも許可: request.auth.uid == firebaseUid でチェック
      allow write: if request.auth != null
                   && request.auth.uid == firebaseUid
                   && filename.matches('.*\\.(mp4|mov|avi|mkv|MP4|MOV|AVI|MKV)$')
                   && request.resource.size < 100 * 1024 * 1024; // 100MB制限
      
      // 読み取りは本人のみ（匿名認証でも許可）
      allow read: if request.auth != null
                  && request.auth.uid == firebaseUid;
      
      // 削除は本人のみ
      allow delete: if request.auth != null
                    && request.auth.uid == firebaseUid;
    }
    
    // 後方互換性のため、2階層パス構造も許可
    match /videos/{userId}/{filename} {
      
      // アップロード許可条件
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && filename.matches('.*\\.(mp4|mov|avi|mkv|MP4|MOV|AVI|MKV)$')
                   && request.resource.size < 100 * 1024 * 1024; // 100MB制限
      
      // 読み取りは本人のみ
      allow read: if request.auth != null
                  && request.auth.uid == userId;
      
      // 削除は本人のみ
      allow delete: if request.auth != null
                    && request.auth.uid == userId;
    }
    
    // 他のパスは全て拒否（デフォルト拒否）
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

