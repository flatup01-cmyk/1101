rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // videos/{firebaseUid}/{jobId}/{filename} の3階層パス構造に対応
    match /videos/{firebaseUid}/{jobId}/{filename} {
      
      // アップロード許可条件
      // 匿名認証でも許可（認証済みユーザーの場合はuidが一致する必要がある）
      allow write: if request.auth != null
                   && (request.auth.uid == firebaseUid || request.auth.token.firebase.sign_in_provider == 'anonymous')
                   && filename.matches('.*\\.(mp4|mov|avi|mkv)$')
                   && request.resource.size < 100 * 1024 * 1024; // 100MB制限
      
      // 読み取りは本人のみ（匿名認証でも許可）
      allow read: if request.auth != null
                  && (request.auth.uid == firebaseUid || request.auth.token.firebase.sign_in_provider == 'anonymous');
      
      // 削除は本人のみ
      allow delete: if request.auth != null
                    && (request.auth.uid == firebaseUid || request.auth.token.firebase.sign_in_provider == 'anonymous');
    }
    
    // 後方互換性のため、2階層パス構造も許可
    match /videos/{userId}/{filename} {
      
      // アップロード許可条件
      allow write: if request.auth != null
                   && (request.auth.uid == userId || request.auth.token.firebase.sign_in_provider == 'anonymous')
                   && filename.matches('.*\\.(mp4|mov|avi|mkv)$')
                   && request.resource.size < 100 * 1024 * 1024; // 100MB制限
      
      // 読み取りは本人のみ
      allow read: if request.auth != null
                  && (request.auth.uid == userId || request.auth.token.firebase.sign_in_provider == 'anonymous');
      
      // 削除は本人のみ
      allow delete: if request.auth != null
                    && (request.auth.uid == userId || request.auth.token.firebase.sign_in_provider == 'anonymous');
    }
    
    // 他のパスは全て拒否（デフォルト拒否）
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

