rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // videos/{userId}/{jobId}/{filename} のパス構造（3階層）
    match /videos/{userId}/{jobId}/{filename} {
      
      // アップロード許可条件
      // 匿名認証ユーザーでも書き込み可能（userIdフィールドの形式を確認）
      allow write: if request.auth != null
                   && userId.matches('^[a-zA-Z0-9_-]+$')
                   && filename.matches('.*\\.(mp4|mov|avi|mkv|MP4|MOV|AVI|MKV)$')
                   && request.resource.size < 100 * 1024 * 1024; // 100MB制限
      
      // 読み取りは認証済みユーザーのみ（匿名認証も許可）
      allow read: if request.auth != null
                  && userId.matches('^[a-zA-Z0-9_-]+$');
      
      // 削除は認証済みユーザーのみ（匿名認証も許可）
      allow delete: if request.auth != null
                    && userId.matches('^[a-zA-Z0-9_-]+$');
    }
    
    // 古い形式（2階層）も一時的にサポート（互換性のため）
    match /videos/{userId}/{filename} {
      allow write: if request.auth != null
                   && userId.matches('^[a-zA-Z0-9_-]+$')
                   && filename.matches('.*\\.(mp4|mov|avi|mkv|MP4|MOV|AVI|MKV)$')
                   && request.resource.size < 100 * 1024 * 1024;
      
      allow read: if request.auth != null
                  && userId.matches('^[a-zA-Z0-9_-]+$');
      
      allow delete: if request.auth != null
                    && userId.matches('^[a-zA-Z0-9_-]+$');
    }
    
    // 他のパスは全て拒否（デフォルト拒否）
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
