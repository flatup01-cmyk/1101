rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // videos/{userId}/{jobId}/{filename} のパス構造（3階層）
    match /videos/{userId}/{jobId}/{filename} {
      
      // アップロード許可条件
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && filename.matches('.*\\.(mp4|mov|avi|mkv|MP4|MOV|AVI|MKV)$')
                   && request.resource.size < 100 * 1024 * 1024; // 100MB制限
      
      // 読み取りは本人のみ
      allow read: if request.auth != null
                  && request.auth.uid == userId;
      
      // 削除は本人のみ
      allow delete: if request.auth != null
                    && request.auth.uid == userId;
    }
    
    // 古い形式（2階層）も一時的にサポート（互換性のため）
    match /videos/{userId}/{filename} {
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && filename.matches('.*\\.(mp4|mov|avi|mkv|MP4|MOV|AVI|MKV)$')
                   && request.resource.size < 100 * 1024 * 1024;
      
      allow read: if request.auth != null
                  && request.auth.uid == userId;
      
      allow delete: if request.auth != null
                    && request.auth.uid == userId;
    }
    
    // 他のパスは全て拒否（デフォルト拒否）
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
